  "scripts": {
    "start": "NODE_ENV=production node src/index",
    "dev": "DEBUG=app:* nodemon src/index",
    "lint:fix": "eslint --fix .",
    "test": "mocha --exit",
    "test:coverage": "nyc mocha",
    "test:report": "nyc report --reporter=html && sensible-browser coverage/index.html"
  },
  "keywords": [],
  "author": "Emanuel Osorio <emanuelosva@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/joi": "^17.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "mongodb": "^3.5.9"
  },
  "devDependencies": {
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
